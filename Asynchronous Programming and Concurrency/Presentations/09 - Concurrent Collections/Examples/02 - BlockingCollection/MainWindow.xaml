<Window x:Class="Wincubate.Threading.Module09.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Blocking Collection Example" Height="350" Width="525">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top">
            <Button x:Name="BtnAdd"
                    Click="OnAdd"
                    HorizontalAlignment="Left"
                    Margin="5">Add</Button>
            <Button x:Name="BtnComplete"
                    Click="BtnComplete_Click"
                    HorizontalAlignment="Left"
                    Margin="5">Complete Adding</Button>
            <Button x:Name="BtnTake"
                    Click="BtnTake_Click"
                    HorizontalAlignment="Right"
                    Margin="5">Take</Button>
        </StackPanel>

        <ListBox x:Name="lst"
                 Margin="5"/>
    </DockPanel>
</Window>
